<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tripzyy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/lavendar1</item>
        <item name="colorPrimaryVariant">@color/periwinkle</item>
        <item name="colorOnPrimary">@color/dark_periwinkle</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
<style name="Theme.Tripzyy" parent="Base.Theme.Tripzyy"></style>
    <!-- Theme with ActionBar -->
    <style name="Theme.Tripzyy." parent="Theme.Material3.Light">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!-- Alternative: Theme explicitly enabling ActionBar -->
    <style name="showActionBar" parent="Theme.Material3.Light">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>


</resources>