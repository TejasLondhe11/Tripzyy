<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoaActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places in Goa...."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Packages   >> "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/baga_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baga Beach"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Sports->Nightspots->Beach Shacks->Sightseeing"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/bagaBeachBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/aguada_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aguada Fort"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Light House Aguada->Candolim beach"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/AguadafortBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/dudhsagar_img"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dudhsagar Falls"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-streamed waterfall-> Swimming pools Surrounded by forest -> "
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/dudhsagarBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/catholic_img"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catholic Church"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Grand facade sits atop a small hill"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/catholicChurchBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>