<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RajsthanActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places in Rajsthan...."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Packages   >> "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/fortsrajasthan_img"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forts"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chittorgarh fort->Nahargarh Fort->jaisalmer Fort->Lohagarh Fort"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹7000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/rajsthanFortsBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/mahal_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mahals"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hawa Mahal->Jai Mahal-> Amber Palace"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹7000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/mahalsBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/gates_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gates"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patrika Gate->Ajmeri GAte->Sanganeri Gate "
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹7000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/rajsthangatesBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/desert_img"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deserts"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desert Safari Osian->Mini Jaisalmer-> Desert National Park Guide"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹7000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/desertBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>