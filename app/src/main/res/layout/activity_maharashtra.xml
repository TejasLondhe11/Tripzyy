<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MaharashtraActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places in Maharashtra..."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Packages   >> "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_marginTop="10sp"
                       android:src="@drawable/verul_image"
                       android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historical Places"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daulatabad->Ellora caves->Temple->BibiKaMagbara->Ajinta"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/historicalPlaceBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/shirdi_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Shirdi"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sai Baba Temple->Wet'nJoy Water Park"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/shirdiBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/pune_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Pune"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lonavala -> Khandala -> Mahabaleshwar -> Alandi"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/puneBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/fort_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fort Places"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singgad -> Purandar -> Shivneri -> Rajgad -> Raigad and Torna"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/fortBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/mumbai_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Mumbai"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Gateway Of indai->marine Drive -> Juhu Beach->Taj Hotel"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/mumbaiBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/nashik_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nashik"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trimbkeshwar -> Hariwar -> Panchawati -> Sita Gufa"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/nashikBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>