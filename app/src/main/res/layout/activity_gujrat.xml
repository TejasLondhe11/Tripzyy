<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GujratActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places in Gujrat...."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Packages   >> "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/temples_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temples"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Somnata temple->Modheru Sun Temple->Shree Dwarkadhish Temple->Rukmini Devi Mandir "
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹5000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/templesBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/parks_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parks"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gir National Park->Vansda National Park-> Sabarmati Riverfront Flower Park"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹5000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/parksBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/waterfalls_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Falls"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Girmal waterfall->Ninai Waterfalls->Zanzari Waterfalls "
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹5000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/waterfallsBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/statueofunity"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statue of Unity"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statue of Unity-> Wall of Unity-> Statue of Unity Tent City 1"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹5000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/statueofunityBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>