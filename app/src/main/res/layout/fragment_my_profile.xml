<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="670dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="MyProfileFragment">

    <!-- Top section with name and profile icon -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="200dp"
            android:layout_height="307dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_person"
            app:civ_border_color="#FF000000"
            app:civ_border_width="4dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_shape"
        android:text="Edit profile"
        android:textColor="@color/white" />

    <!-- Profile Details -->
    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_account"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Name" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_calendar"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Age" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_call"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Phone" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Email Id" />


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Username" />



        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:hint="Password" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_shape"
            android:text="Sign out"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>