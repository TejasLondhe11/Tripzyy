<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity"
    android:background="@color/white"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:padding="5sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24sp"
        app:cardElevation="24sp"
        android:layout_margin="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lavender"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvRegisterHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alata"
                android:text=" Register Here "
                android:textColor="@color/purple"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRegisterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/icon_account"
                android:drawablePadding="8sp"
                android:hint="Name"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etRegisterMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/icon_call"
                android:drawablePadding="8sp"
                android:hint="Mobile No."
                android:inputType="number"
                android:maxLength="13"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="8sp"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="8sp"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/icon_lock"
                android:drawablePadding="8sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegisterRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@color/periwinkle"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                >
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>