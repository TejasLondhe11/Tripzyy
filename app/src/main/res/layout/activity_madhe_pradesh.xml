<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MadhePradeshActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Places in Madhe Pradesh...."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Packages   >> "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/fortmadhepradesh_img"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forts"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gwalior Fort->Orchha Fort->Dhar Fort->Gadpahra Fort"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹8000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/rajsthanFortsBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/waterfalls_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WaterFalls"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patalpani Water Falls->Bee Falls->Chachai Waterfall"
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹8000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/waterfallsmadhepradheshBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_margin="20sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/temples_image"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temples"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shri Omkareshwar Jyotirlinga temple->Matangeshwar Temple->Bhojeshwar Mahadev Temple "
                        android:textSize="10sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="7sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹8000 per person"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:id="@+id/templesmadhepradeshBooking"
                        android:textColor="@color/dark_periwinkle"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>