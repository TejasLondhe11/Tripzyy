<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ConfirmRegisterMobileNoActivity"
    android:orientation="vertical"
    android:layout_margin="16sp">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/icon_person"/>
    <EditText
        android:id="@+id/etConfirmRegisterMobileNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/domine_medium"
        android:hint="Enter Registered Mobile no"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="10"
        android:background="@drawable/et_bg_shape"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:layout_marginTop="20sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/acbtnConfirmRegisterMobileNoVerify"
        android:text="Verify"
        android:textColor="@color/black"
        android:background="@drawable/btn_bg_shape"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        android:textSize="18dp"/>







</LinearLayout>